    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        html, body, .container {
            width: 100%;
            height: 100%;
            color: white;
        }

        body {
            background-color: #282828;
            font-family: 'Roboto', sans-serif;
            font-weight: 400;

            color: rgb(255, 255, 255, 0.7);
        }

        a {
            color: #ffffff;
        }

        a:visited {
            color: #ffffff;
        }

        a:focus {
            outline: none;
        }

        input {
            width: 100%;
            padding: 10px;
            border: none;
            font-size: 1em;
            background: transparent;
            color: white;

            border-bottom: 1px solid grey;
        }

        input:hover {
            border-bottom: 1px solid rgb(255, 255, 255, 0.7);
        }

        input:focus {
            outline: none;
            border-bottom: 1px solid rgb(255, 255, 255, 0.7);
        }

        button {
            border: none;
        }

        button:hover {
            cursor: pointer;
        }

        button:focus {
           outline: none;
        }

        button:active {
           outline: none;
        }

        .ripple {
          background-position: center;
          transition: background 0.8s;
        }

        .ripple:hover {
          background: #47a7f5 radial-gradient(circle, transparent 1%, #47a7f5 1%) center/15000%;
        }

        .ripple:active {
          background-color: #6eb9f7;
          background-size: 100%;
          transition: background 0s;
        }

        .container {
            display: flex;
            justify-content: center;
        }

        .wrapper {
            width: 430px;
            max-width: 430px;
            margin-top: 8%;
        }

        @@media screen and (max-width: 600px) {
            .wrapper {
                width: 80vw;
            }
        }

        .paper {
            background-color: #383838;
            border-radius: 4px;
        }

        .wrapper .card {
            margin-bottom: 10px;
        }

        .card {

        }

        .card .card-header {
            display: flex;
            flex-direction: row;

            padding: 16px;
        }

        .card .card-header .avatar {

            flex: initial;

            min-width: 40px;
            min-height: 40px;
            width: 40px;
            height: 40px;
            max-width: 40px;
            max-height: 40px;

            background-color: #a6ce39;
            border-radius: 50%;

            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card .card-header .avatar + .card-titles {
            margin-left: 16px;

        }

        .card .card-header .card-titles {
            flex: 1;

            display: flex;
            flex-direction: column;
        }

        .card .card-header .card-titles .card-title {
            flex: 1;
        }


        .card .card-header .card-subtitle {
            color: rgba(255, 255, 255, 0.7);
        }

        .card .card-header .avatar + .card-content {
            margin-top: 16px;

        }

        .card .card-content {
            padding: 16px;           
        }

        .card .card-actions {

            margin-top: 40px;
            padding: 16px;
        }

        .card .card-actions a {

            font-size: larger;
        }

        .card h1 {
            font-size: 1.5em;
            font-weight: normal;
            color: rgba(255, 255, 255, 0.7);

            margin-bottom: 40px;
        }

        .card h2 {
            font-size: 1.5em;
            font-weight: normal;
            color: rgba(255, 255, 255, 0.7);

            margin-bottom: 40px;
        }

        .outlined-button {
            display: inline-block;

            border: none;
            border-radius: 4px;

            background-color: transparent;
            border: 1px solid #6aB6d8;
            color: #6aB6d8;

            text-align: center;
            text-decoration: none;

            cursor: pointer;
        }

        .outlined-button:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .outlined-button:visited {
            color: #6aB6d8;
        }

        .logo-container {
            text-align: center;
            margin-bottom: 10%;
        }

        .logo-container .logo {
            width: 200px;
        }
    </style>
